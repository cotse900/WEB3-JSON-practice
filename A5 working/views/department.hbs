
<div class="row">
    <div class="col-md-12">
        <h1><strong>{{department.departmentName}} - Department: {{department.departmentId}}</strong></h1>
        <hr />
         <form method="post" action="/department/update"> 
         <input type="hidden" name="departmentId" value={{department.departmentId}} />
            <fieldset>
                <div class="row">
                        <div class="form-group">
                            <label for="departmentName">Department Name:</label>
                            <input class="form-control" name="departmentName" type="text" value={{department.departmentName}} />
                        </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
    </div>
</div>
